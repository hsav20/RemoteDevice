<?xml version="1.0" encoding="utf-8"?>
<ltd.advskin.view.KcLayoutCard
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp">

    <ltd.advskin.view.KcBtnProgress
        android:id="@+id/kbpStandByS1"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        app:textSize="14sp"
        app:corner="8"
        app:progress="100"
        app:text="待机"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ltd.advskin.view.KcBtnProgress
        android:id="@+id/kbpFactorySetupS1"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        app:textSize="14sp"
        app:corner="8"
        app:progress="100"
        app:text="出厂设置"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ltd.advskin.view.KcBtnProgress
        android:id="@+id/kbtBrightnessLeftS1"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        app:textSize="14sp"
        app:corner="8"
        app:progress="100"
        app:text="亮度"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



    <ltd.advskin.view.KcBtnProgress
        android:id="@+id/kbpNoiseS1"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        app:textSize="14sp"
        app:corner="8"
        app:progress="100"
        app:text="噪音测试"
        app:layout_constraintTop_toBottomOf="@+id/kbpStandByS1"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ltd.advskin.view.KcBtnProgress
        android:id="@+id/kbpDelayS1"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        app:textSize="14sp"
        app:corner="8"
        app:progress="100"
        app:text="延时设置"
        app:layout_constraintTop_toBottomOf="@+id/kbpFactorySetupS1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ltd.advskin.view.KcBtnProgress
        android:id="@+id/kbpSpeakerS1"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        app:textSize="14sp"
        app:corner="8"
        app:progress="100"
        app:text="喇叭设置"
        app:layout_constraintTop_toBottomOf="@+id/kbtBrightnessLeftS1"
        app:layout_constraintRight_toRightOf="parent"/>



    <ltd.advskin.view.KcBtnProgress
        android:id="@+id/kbpNightModeDS1"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        app:textSize="14sp"
        app:corner="8"
        app:progress="100"
        app:text="白天"
        app:layout_constraintTop_toBottomOf="@+id/kbpNoiseS1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ltd.advskin.view.KcBtnProgress
        android:id="@+id/kbpMoreS1"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        app:textSize="14sp"
        app:corner="8"
        app:progress="100"
        app:text="更多"
        app:layout_constraintTop_toBottomOf="@+id/kbpDelayS1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</ltd.advskin.view.KcLayoutCard>
