<?xml version="1.0" encoding="utf-8"?>
<ltd.advskin.view.KcLayoutCard
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <ltd.advskin.view.KcBtnProgress
            android:id="@+id/kbpSurround1"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:layout_width="110dp"
            android:layout_height="40dp"
            app:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ltd.advskin.view.KcBtnProgress
            android:id="@+id/kbpSurround2"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:layout_width="110dp"
            android:layout_height="40dp"
            app:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/kbpSurround1"/>

        <ltd.advskin.view.KcBtnProgress
            android:id="@+id/kbpSurround3"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:textSize="14sp"
            app:corner="8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/kbpSurround2"/>

        <ltd.advskin.view.KcBtnProgress
            android:id="@+id/kbpSurround4"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:textSize="14sp"
            app:corner="8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/kbpSurround3"/>

        <ltd.advskin.view.KcBtnProgress
            android:id="@+id/kbpSurround5"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:textSize="14sp"
            app:corner="8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/kbpSurround4"/>

        <ltd.advskin.view.KcBtnProgress
            android:id="@+id/kbpSurround6"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:textSize="14sp"
            app:corner="8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/kbpSurround5"/>
    </LinearLayout>
    </HorizontalScrollView>

</ltd.advskin.view.KcLayoutCard>
