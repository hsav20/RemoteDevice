<?xml version="1.0" encoding="utf-8"?>
<ltd.advskin.view.KcLayoutCard
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ltd.advskin.view.KcBtnProgress
                android:id="@+id/kbpTone1"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ltd.advskin.view.KcBtnProgress
                android:id="@+id/kbpTone2"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/kbpTone1"
                app:layout_constraintRight_toLeftOf="@+id/kbpTone3"/>

            <ltd.advskin.view.KcBtnProgress
                android:id="@+id/kbpTone3"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ltd.advskin.view.KcBtnProgress
                android:id="@+id/kbpTone4"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/kbpTone3"
                app:layout_constraintRight_toLeftOf="@+id/kbpTone5"/>

            <ltd.advskin.view.KcBtnProgress
                android:id="@+id/kbpTone5"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </LinearLayout>
    </HorizontalScrollView>

</ltd.advskin.view.KcLayoutCard>

