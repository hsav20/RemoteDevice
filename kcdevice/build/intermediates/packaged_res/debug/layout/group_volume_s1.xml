<?xml version="1.0" encoding="utf-8"?>
<ltd.advskin.view.KcLayoutCard
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ltd.advskin.view.KcBtnProgress
            android:id="@+id/kbpMuteVolumeS1"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            app:textSize="14sp"
            app:corner="8"
            app:text="静音"/>
        <SeekBar
            android:id="@+id/sbAdjVolumeS1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:thumbOffset="0dp"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:max="100"
            android:progressDrawable="@drawable/seekbar_download"
            android:thumb="@drawable/seekbar_thumb"
            app:layout_constraintHorizontal_weight="1"/>
        <ltd.advskin.view.KcBtnText
            android:id="@+id/kbtValueVolumeS1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            app:text="0"/>

    </LinearLayout>

</ltd.advskin.view.KcLayoutCard>




