<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <ltd.advskin.view.KcBtnText
        android:id="@+id/kbtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ltd.advskin.view.KcBtnText
        android:id="@+id/kbtMac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/kbtName"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ltd.advskin.view.KcBtnText
        android:id="@+id/kbtRssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/kbtName"
        app:layout_constraintBottom_toBottomOf="@+id/kbtMac"
        app:layout_constraintRight_toLeftOf="@+id/kbpConnect"/>

    <ltd.advskin.view.KcBtnProgress
        android:id="@+id/kbpConnect"
        android:layout_width="60dp"
        android:layout_height="35dp"
        app:textColor="@color/white"
        app:textSize="14sp"
        app:corner="8"
        app:progress="100"
        app:layout_constraintTop_toTopOf="@+id/kbtName"
        app:layout_constraintBottom_toBottomOf="@+id/kbtMac"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="?attr/boxFillingBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kbtMac"/>

</androidx.constraintlayout.widget.ConstraintLayout>
