<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ltd.advskin.view.KcHeaderView
        android:id="@+id/khvVersionInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ltd.advskin.view.KcBtnText
        android:id="@+id/kbtVersionInfoA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/khvVersionInfo"
        app:layout_constraintLeft_toLeftOf="parent"/>

<!--    app:text="AAAAA"-->
<!--    app:textSize="15dp"-->

    <ltd.advskin.view.KcBtnText
        android:id="@+id/kbtVersionInfoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/kbtVersionInfoA"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ltd.advskin.view.KcBtnText
        android:id="@+id/kbtVersionInfoC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/kbtVersionInfoB"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ltd.advskin.view.KcBtnText
        android:id="@+id/kbtVersionInfoCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:text="深圳市酷唱科技有限公司"
        app:textBold="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/kbtVersionInfoEmail"/>
    <ltd.advskin.view.KcBtnText
        android:id="@+id/kbtVersionInfoEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:text="联系邮箱：support@hsav.com"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/kbtVersionInfoTel"/>
    <ltd.advskin.view.KcBtnText
        android:id="@+id/kbtVersionInfoTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:text="联系电话：0755-27950879"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/kbtVersionInfoQQ"/>
    <ltd.advskin.view.KcBtnText
        android:id="@+id/kbtVersionInfoQQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        app:text="联系QQ：918880752"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

