<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="30dp"
    android:layout_height="110dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ltd.advskin.view.KcBtnText
        android:id="@+id/kbtVerticalNoiseTop"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        app:textSize="12sp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/eq_vb_bg_noise">
        </RelativeLayout>
        <ltd.kcdevice.view.VerticalSeekBar
            android:id="@+id/vsbVerticalNoiseBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:thumb="@drawable/seekbar_thumb" />

    </RelativeLayout>

    <ltd.advskin.view.KcBtnText
        android:id="@+id/kbtVerticalNoiseBottom"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        app:textSize="12sp"/>

</LinearLayout>
